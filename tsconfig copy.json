{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["es6", "dom", "dom.iterable"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./pages/components",
    "paths": {
      "@/*": ["*"],
      "@/api/*": ["/pages/api/*"],
      "@//*": ["/generated/*"]
    },

    "noImplicitReturns": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types", "./pages/components"],
    "rootDir": ".",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "nexus/typescript-language-service"
      }
    ]
  },

  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", ".", "types.d.ts", "./pages/components"]
}
